<%= semantic_form_for @product do |f| %>
	<%= f.input :title %>
	<%= f.input :description %>
	<%= f.input :price, min: 0.01 %>
	<%= f.input :published %>
	<%= f.input :category %>
	<%= f.input :difficulty_level %>
	<%= f.input :country, as: :select, collection: Country.all %>
	<%= f.action :submit %>
<% end %>