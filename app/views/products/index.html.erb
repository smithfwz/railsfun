<table width="70%" style="margin:50px auto;" border='1'>

	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Price</th>
			<th>Country</th>
			<th>Category</th>
			<th>Published</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
			<tr>
				<th><a href="<%= product_path(product) %>"><%= product.title %></a></th>
				<th><%= product.description %></th>
				<th><%= product.price %></th>
				<th><%= product.country %></th>
				<th><%= product.category.title %></th>
				<th><%= product.published %></th>
				<th>
					<!--<a href="<%= product_path(product) %>">Detail</a>-->
					<%= link_to('Create', new_product_path) %>
					<%= link_to('Edit', edit_product_path(product.id)) %>
					<%= link_to('Delete', product_path(product.id), method: :delete, data: { confirm: 'Are you sure you want to delete this product?' }) %>
				</th>
			</tr>
		<% end %>
	</tbody>

</table>
