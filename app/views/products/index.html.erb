<table width="70%" style="margin:50px auto;" border='1'>

	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Price</th>
			<th>Country</th>
			<th>Category</th>
			<th>Published</th>
			<th>Detail</th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
			<tr>
				<th><%= product.title %></th>
				<th><%= product.description %></th>
				<th><%= product.price %></th>
				<th><%= product.country %></th>
				<th><%= product.category.title %></th>
				<th><%= product.published %></th>
				<th>
					<!--<a href="<%= product_path(product) %>">Detail</a>-->
					<%= link_to 'Detail', product_path(product) %>
				</th>
			</tr>
		<% end %>
	</tbody>

</table>
